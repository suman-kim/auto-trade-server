# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=your_password
DB_DATABASE=auto_trade_db

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=your_email@gmail.com

# KIS API Configuration
KIS_APP_KEY=your_kis_app_key
KIS_APP_SECRET=your_kis_app_secret
KIS_ACCESS_TOKEN=your_kis_access_token
KIS_REAL_ACCOUNT=your_real_account_number
KIS_VIRTUAL_ACCOUNT=your_virtual_account_number

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Security Configuration
ALLOWED_IPS=127.0.0.1,::1,192.168.1.0/24
MAX_REQUEST_SIZE=10485760
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX_REQUESTS=5
REGISTER_RATE_LIMIT_MAX_REQUESTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001
CORS_CREDENTIALS=true

# Swagger Configuration
SWAGGER_TITLE=Auto Trade API
SWAGGER_DESCRIPTION=자동 거래 시스템 API 문서
SWAGGER_VERSION=1.0
SWAGGER_TAG_AUTH=인증 관련 API
SWAGGER_TAG_USERS=사용자 관리 API
SWAGGER_TAG_PORTFOLIO=포트폴리오 관리 API
SWAGGER_TAG_TRADING=거래 관련 API
SWAGGER_TAG_NOTIFICATIONS=알림 관리 API
SWAGGER_TAG_MONITORING=시스템 모니터링 API
SWAGGER_TAG_WEBSOCKET=실시간 데이터 API

# Trading Configuration
TRADING_ENABLED=true
MAX_POSITION_SIZE=1000000
RISK_PERCENTAGE=2
STOP_LOSS_PERCENTAGE=5
TAKE_PROFIT_PERCENTAGE=10

# Notification Configuration
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_PUSH_ENABLED=true
NOTIFICATION_WEBSOCKET_ENABLED=true
NOTIFICATION_RETENTION_DAYS=30

# Monitoring Configuration
MONITORING_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
ERROR_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

